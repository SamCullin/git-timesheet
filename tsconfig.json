{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "paths": {
        "@git-timesheet/core": ["./packages/core/src/index.ts"],
        "@git-timesheet/vcs": ["./packages/vcs/src/index.ts"],
        "@git-timesheet/reporter": ["./packages/reporter/src/index.ts"],
        "@git-timesheet/vcs-git": ["./packages/vcs/git/src/index.ts"],
        "@git-timesheet/reporter-markdown": ["./packages/reporter/markdown/src/index.ts"],
        "@git-timesheet/cli": ["./packages/cli/src/index.ts"]
    }
  }
}
